@model LiveMonitoringWeb.Models.Customer

@{
    ViewBag.Title = "Edit";
}
<div class="container" style="min-height:400px;height:100%;">
    <div class="row">

        <div class="col-sm-12">
            <h3><span class="glyphicon glyphicon-user"></span> Customer &#58;&#58; Edit</h3>
            <hr />
        </div>
        <div class="col-sm-1"></div><div class="col-sm-10" style="margin-bottom:100px;">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.CustomerId)
                <div>
                    @{
                var message = string.Empty;
                if (ViewBag.Message != null)
                {
                    message = ViewBag.Message;
                }
                <label style="color:red;">@message</label>
                    }
                </div>

    <div class="editor-label labeltop">
        @Html.LabelFor(model => model.Email): @Html.DisplayFor(model => model.Email)

    </div>

                <div class="editor-label">

                    @Html.LabelFor(model => model.FirstName, new { @class = "labeltop" })
                </div>
                <div class="editor-field">

                    
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "textarea1" })
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.LastName, new { @class = "labeltop" })
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "textarea1" })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.OrganizationName, new { @class = "labeltop" })
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.OrganizationName, new { @class = "textarea1" })
                    @Html.ValidationMessageFor(model => model.OrganizationName)
                </div>
                <p>
                    <input type="submit" value="Save" class="button-link" /> | @Html.ActionLink("Skip", "Index", "Home")
                </p>

            }
        </div>
    </div>
</div>