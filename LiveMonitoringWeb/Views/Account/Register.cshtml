@model LiveMonitoringWeb.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    String AppBaseURLWithSlash = new CommonUtility.AppSettingReader().ReadKey("WebBaseURL");
    String AppBaseURL = AppBaseURLWithSlash.Substring(0, AppBaseURLWithSlash.Length - 1);

}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        <div class="row" style="padding-bottom:10%;"></div>

        <div class="col-sm-3"></div>
        <div class="col-sm-6 loginbox loginbg" style="min-height:370px;height:100%;">
            <div class="col-sm-12">
                @Html.AntiForgeryToken()
                <div class="col-sm-12"><img src="@AppBaseURL/content/images/rgl_logo.png" class="logo-image" /></div>
                <div class="col-sm-12">@Html.LabelFor(m => m.Email, new { @class = "login-text" })</div>
                <div class="col-sm-12 ">
                    @Html.TextBoxFor(m => m.Email, new { @class = "inputtype " })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="col-sm-12">@Html.LabelFor(m => m.Password, new { @class = "input-text login-text" })</div>
                <div class="col-sm-12 ">
                    @Html.PasswordFor(m => m.Password, new { @class = "inputtype" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="col-sm-12">@Html.LabelFor(m => m.ConfirmPassword, new { @class = "input-text login-text" })</div>
                <div class="col-sm-12 ">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "inputtype" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    @Html.ValidationSummary(true)
                </div>
                <div class="col-sm-12" style="text-align:right;">
                    <p class="input-text">
                        <span style="float:right;color:white;"><input type="submit" id="Button" value="Register" class="button" style="color:white;font-weight:700;" /></span>
                        <span style="float: left; color: white; margin-top: 20px;">@Html.ActionLink("Back to Login", "Login", null, new { @class = "input-text login-text" })</span>
                    </p>

                </div>

                
            </div>
        </div>
        <div class="col-sm-3"></div>
    }
</div>

