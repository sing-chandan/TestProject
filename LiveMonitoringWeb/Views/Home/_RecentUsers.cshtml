@model IEnumerable<LiveMonitoringWeb.Models.MachineDetail>

@{
    Layout = null;
    String AppBaseURLWithSlash = new CommonUtility.AppSettingReader().ReadKey("WebBaseURL");
    String AppBaseURL = AppBaseURLWithSlash.Substring(0, AppBaseURLWithSlash.Length - 1);
}
<style>
    #CSSTableGeneratorHome tr:nth-child(even) {
        
        height: 35px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').dataTable({
            "bDestroy": true
        });
    });
</script>

<div class="col-sm-12 table-responsive " style="margin-bottom:50px;">
    <table id="table" style="width: 100%; border: 1px solid #000000; " id="CSSTableGeneratorHome" class="CSSTableGeneratorHome table-curved">
        <tr style=" background-color: #4C638E; color: white; height: 30px;">
            <th>
                @Html.DisplayNameFor(model => model.MachineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
        </tr>

        @if (Model.Count() == 0)
        {
            
            <tr style="height: 190px; " id="newpost">
               
                <td style="text-align:center;background-color:none;">No Data Available</td>
            
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td style=" border-left: 1px solid #ddd; border-top: 1px solid #ddd;">
                        @Html.DisplayFor(modelItem => item.MachineName)
                    </td>
                    <td style=" border-left: 1px solid #ddd; border-top: 1px solid #ddd;">
                        <a href='@AppBaseURL/MachineDetail/Index?MachineId=@item.MachineDetailId'>@Html.DisplayFor(modelItem => item.UserName)</a>
                    </td>
                </tr>
            }
        }
    </table>

</div>