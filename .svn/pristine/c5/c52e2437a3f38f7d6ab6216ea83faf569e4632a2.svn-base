@model IEnumerable<LiveMonitoringWeb.Models.Groups>

@{
    String AppBaseURLWithSlash = new CommonUtility.AppSettingReader().ReadKey("WebBaseURL");
    String AppBaseURL = AppBaseURLWithSlash.Substring(0, AppBaseURLWithSlash.Length - 1);
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_outh.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $('#table').dataTable({
            "iDisplayLength": 10,
            "bDestroy": true
        });
    });
</script>

<div class="container" style="min-height:100%;margin-bottom:2%;">
    <div class="row">

        <div class="col-sm-12">
            <h3><span class="glyphicon glyphicon-globe"></span> Groups</h3>
            <hr />
        </div>

        <div class="col-sm-12" style="text-align:right;padding-bottom:14px;">@Html.ActionLink("Create New", "Create", null, new { @class = "button-link" })</div>

       
        <div class="col-sm-12 table-responsive" style="padding-bottom:50px;">
            <table id="table" style=" border-right: 1px solid #000000;width:100%; " class="CSSTableGenerator">
                <thead>
                    <tr style=" background-color: #4C638E; color: white; height :30px;border-top-left-radius:20px;">
                        <th>
                            @Html.DisplayNameFor(model => model.GroupName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShiftStartTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShiftEndTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LunchStartTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LunchEndTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </th>
                      
                        <th style="width:80px;"></th>
                    </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShiftStartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShiftEndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LunchStartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LunchEndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                       
                        <td>
                            <a href="@AppBaseURL/Groups/Edit?id=@item.GroupId"><img src="~/Content/images/edit.png" title="Edit" style="padding-right:5px;" /></a>
                            <a href="@AppBaseURL/Groups/Details?id=@item.GroupId"><img src="~/Content/images/details.png" title="Details" style="padding-right:8px;" /></a>
                            <a href="@AppBaseURL/Groups/Delete?id=@item.GroupId"><img src="~/Content/images/delete.png" title="Delete" style="padding-right:5px;" /></a>
                          
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            

        </div>

    </div>

</div>
